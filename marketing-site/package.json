{
  "name": "@helicontrade/marketing-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "HeliconTrade Marketing Website - High-performance Nuxt site for helicontrade.com",
  "scripts": {
    "dev": "nuxt dev --host helicontrade.local --port 3002",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "build:cloudflare": "NODE_ENV=production NUXT_STATIC=true nuxt generate",
    "build:cloudflare-config": "nuxt generate --config-file nuxt.config.cloudflare.ts",
    "preview": "nuxt preview",
    "analyze": "nuxt analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.1.5",
    "@nuxtjs/color-mode": "3.5.2",
    "@nuxtjs/i18n": "^10.0.6",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@unhead/ssr": "2.0.14",
    "@unhead/vue": "2.0.14",
    "nuxt": "3.18.1",
    "posthog-js": "^1.261.0",
    "posthog-node": "^4.0.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "2.6.3",
    "@nuxt/eslint-config": "^0.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8",
  "imports": {
    "#internal/nuxt/paths": {
